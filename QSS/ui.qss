QPushButton#login_button {
    /*设置背景颜色*/
    background-color: #4530B3;
    /*设置字体颜色*/
    color: #FFFFFF;
    /*设置边框和圆角*/
    border: 1px solid #4530B3;
    border-radius: 16px;
    /*设置边距*/
    margin-left: 10px;
}
QPushButton#save_button {
    /*设置背景颜色*/
